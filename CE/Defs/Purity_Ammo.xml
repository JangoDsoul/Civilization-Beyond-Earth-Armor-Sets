    <!-- ================== Projectiles ================== -->

    <ThingDef Class="CombatExtended.AmmoDef" Name="BasePurityChargedBullet" ParentName="BaseBullet" Abstract="true">
        <graphicData>
            <texPath>Things/Projectile/Purity</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <projectile Class="CombatExtended.ProjectilePropertiesCE">
            <damageDef>Bullet</damageDef>
            <speed>160</speed>
            <dropsCasings>false</dropsCasings>
        </projectile>
        <thingClass>CombatExtended.BulletCE</thingClass>
    </ThingDef>

    <ThingDef Class="CombatExtended.AmmoDef" ParentName="BasePurityChargedBullet">
        <defName>Bullet_PurityCharged</defName>
        <label>Purity Charged bullet</label>
        <projectile Class="CombatExtended.ProjectilePropertiesCE">
            <damageAmountBase>13</damageAmountBase>
            <secondaryDamage>
                <li>
                    <def>Bomb_Secondary</def>
                    <amount>2</amount>
                </li>
                <li>
                    <def>Flame_Secondary</def>
                    <amount>7</amount>
                </li>
            </secondaryDamage>
            <armorPenetrationSharp>12</armorPenetrationSharp>
            <armorPenetrationBlunt>25.6</armorPenetrationBlunt>
        </projectile>
    </ThingDef>

