    <ThingDef Class="CombatExtended.AmmoDef" Name="BaseHarmonyChargedBullet" ParentName="BaseBullet" Abstract="true">
        <graphicData>
            <texPath>Things/Projectile/Harmony</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <projectile Class="CombatExtended.ProjectilePropertiesCE">
            <damageDef>Bullet</damageDef>
            <speed>160</speed>
            <dropsCasings>false</dropsCasings>
        </projectile>
        <thingClass>CombatExtended.BulletCE</thingClass>
    </ThingDef>

    <ThingDef Class="CombatExtended.AmmoDef" ParentName="BaseHarmonyChargedBullet">
        <defName>Bullet_HarmonyCharged</defName>
        <label>Harmony Charged bullet</label>
        <projectile Class="CombatExtended.ProjectilePropertiesCE">
            <damageAmountBase>13</damageAmountBase>
            <secondaryDamage>
                <li>
                    <def>Bomb_Secondary</def>
                    <amount>2</amount>
                </li>
                <li>
                    <def>ArrowVenom</def>
                    <amount>1</amount>
                </li>
            </secondaryDamage>
            <armorPenetrationSharp>12</armorPenetrationSharp>
            <armorPenetrationBlunt>25.6</armorPenetrationBlunt>
        </projectile>
    </ThingDef>

