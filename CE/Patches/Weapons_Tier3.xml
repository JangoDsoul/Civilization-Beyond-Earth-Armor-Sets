						<recoilAmount>1.51</recoilAmount>
						<verbClass>CombatExtended.Verb_ShootCE</verbClass>
						<hasStandardCommand>true</hasStandardCommand>
						<defaultProjectile>Bullet_6x24mmHarmonyCharged</defaultProjectile>
