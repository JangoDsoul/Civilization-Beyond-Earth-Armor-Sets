<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Combat Extended</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<!--===== Helmet =====-->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[@Name="Tier2_Helmet"]/statBases</xpath>
					<value>
						<Bulk>4.5</Bulk>
						<WornBulk>1</WornBulk>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[@Name="Tier2_Helmet"]/statBases</xpath>
					<value>
						<Flammability>0</Flammability>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[@Name="Tier2_Helmet"]/statBases/ArmorRating_Sharp</xpath>
					<value>
						<ArmorRating_Sharp>12.8</ArmorRating_Sharp>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[@Name="Tier2_Helmet"]/statBases/ArmorRating_Blunt</xpath>
					<value>
						<ArmorRating_Blunt>28</ArmorRating_Blunt>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[@Name="Tier2_Helmet"]/equippedStatOffsets</xpath>
					<value>
						<SmokeSensitivity>-1</SmokeSensitivity>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[@Name="Tier2_Helmet"]/apparel/bodyPartGroups</xpath>
					<value>
						<li>Eyes</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[@Name="Tier2_Helmet"]/apparel/layers</xpath>
					<value>
						<li>OnHead</li>
						<li>StrappedHead</li>
						<li>MiddleHead</li>
					</value>
				</li>

				<!--===== Armor =====-->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[@Name="Tier2_Armor"]/statBases</xpath>
					<value>
						<Bulk>80</Bulk>
						<WornBulk>12</WornBulk>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[@Name="Tier2_Armor"]/statBases</xpath>
					<value>
						<Flammability>0</Flammability>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[@Name="Tier2_Armor"]/statBases/ArmorRating_Sharp</xpath>
					<value>
						<ArmorRating_Sharp>16</ArmorRating_Sharp>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[@Name="Tier2_Armor"]/statBases/ArmorRating_Blunt</xpath>
					<value>
						<ArmorRating_Blunt>40</ArmorRating_Blunt>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[@Name="Tier2_Armor"]/equippedStatOffsets</xpath>
					<value>
						<Bulk>60</Bulk>
						<CarryBulk>8</CarryBulk>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[@Name="Tier2_Armor"]/apparel/bodyPartGroups</xpath>
					<value>
						<li>Hands</li>
						<li>Feet</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>

